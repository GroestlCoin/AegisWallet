<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CustomActionBarTheme"
        parent="">
        <item name="android:actionBarStyle">@style/CustomActionBar</item>
        <item name="android:actionBarTabTextStyle">@style/MyActionBarTabText</item>
        <item name="android:actionMenuTextColor">@color/custom_dark_gray</item>
    </style>

    <!-- ActionBar styles -->
    <style name="CustomActionBar"
        parent="android:Widget.Holo.ActionBar">
        <item name="android:titleTextStyle">@style/MyActionBarTitleText</item>
        <item name="android:background">@drawable/repeating_bg</item>
        <item name="android:logo">@android:color/transparent</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_drawer</item>

    </style>

    <!-- ActionBar title text -->
    <style name="MyActionBarTitleText"
        parent="android:TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/custom_dark_gray</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- ActionBar tabs text styles -->
    <style name="MyActionBarTabText"
        parent="android:Widget.Holo.ActionBar.TabText">
        <item name="android:textColor">@color/custom_dark_gray</item>
    </style>

</resources>